@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8"/>
    <title>抽奖活动</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta content="" name="description"/>
    <meta content="" name="author"/>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="favicon.ico"/>

    <link href="../../assets/fonts/font-face.css" rel="stylesheet" type="text/css"/>
    <link href="../../assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="../../assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css"/>
    <link href="/content/lottery.css" rel="stylesheet" type="text/css"/>
</head>
<body>
    <header>
        <div class="header-btn">
            @*<a class="btn" href="/lottery/main/?stype=0">抽特等奖</a>*@
            <a class="btn" href="/lottery/main/?stype=1">抽一等奖</a>
            <a class="btn" href="/lottery/main/?stype=2">抽二等奖</a>
            <a class="btn" href="/lottery/main/?stype=3">抽三等奖</a>
            @*<a class="btn" href="/lottery/main/?stype=4">抽特别奖</a>*@
            <a class="btn" href="/lottery/list">中奖名单</a>
        </div>
        <div class="header-title text-center">
            <p>@ViewBag.Title</p>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="route-item">
                        <div class="head-image text-center">
                            <img id="img" src="/images/lottery-logo.jpg" width="400" height="400" />
                        </div>
                        <div class="nick-name text-center">
                            <p id="name">马上开始</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-3 col-md-6 text-center">
                    <a id="btnStart" class="btn btn-default btn-lotter-2" href="javascript:">开 始</a>
                    <a id="btnStop" class="btn btn-default btn-lotter-2" href="javascript:">停 止</a>
                    <input type="hidden" value="@ViewBag.Type" id="hidType" />
                </div>
            </div>
        </div>
    </section>
    <footer>
        <div class="hide">
            @foreach (Piaososo.WeiXin.Models.Entity.Lottery model in ViewBag.Follower)
            {
                <img id="@(model.OpenID)" src="@(model.HeadImgUrl)" />
            }
        </div>
    </footer>

    <script src="../../assets/global/plugins/jquery-1.11.0.min.js" type="text/javascript"></script>
    <script src="../../assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../../assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var data = JSON.parse(('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Follower))'));
        $(function () {
            $('#btnStop').hide();
            $('#btnStart').show();
            var _Interval;
            var length = data.length;
            $('#btnStart').click(function () {
                if (length == 0) return;
                $(this).hide();
                $('#btnStop').show();
                _Interval = setInterval(function () {
                    var rdm = Math.random();
                    var index = parseInt((rdm * length), 0);
                    var openid = data[index]["OpenID"];
                    $('#img').attr('src', $('#' + openid).attr('src'));
                    $('#name').html(data[index]["NickName"]);
                }, 50);
            });

            $('#btnStop').click(function () {
                if (length == 0) return;
                $(this).hide();
                $('#btnStart').show();
                clearInterval(_Interval);
                var times = 0;
                var openid = '';
                var _Interval0 = setInterval(function () {
                    var rdm = Math.random();
                    var index = parseInt((rdm * length), 0);
                    openid = data[index]["OpenID"];
                    $('#img').attr('src', $('#' + openid).attr('src'));
                    $('#name').html(data[index]["NickName"]);
                    times += 1;
                    if (times > 10) {
                        clearInterval(_Interval0);
                        data.splice(index, 1);
                        $.ajax({
                            url: '/Lottery/Submit',
                            type: 'post',
                            dataType: 'json',
                            data: { openid: openid, type: $('#hidType').val() },
                            success: function (res) {
                                //console.log(res);
                            }
                        });
                    }
                }, 150);
            });
        });
    </script>
</body>
</html>
