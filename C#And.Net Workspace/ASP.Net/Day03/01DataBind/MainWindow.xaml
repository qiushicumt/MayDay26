<Window x:Class="_01DataBind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtName" Text="{Binding Name}" HorizontalAlignment="Left" Height="23" Margin="100,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="txtAge" Text="{Binding Age}" HorizontalAlignment="Left" Height="23" Margin="100,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="ageAddButton" Content="addAge" HorizontalAlignment="Left" Margin="292,66,0,0" VerticalAlignment="Top" Width="75" Click="ageAddButton_Click"/>
        <Button x:Name="showButton" Content="showAge" HorizontalAlignment="Left" Margin="292,120,0,0" VerticalAlignment="Top" Width="75" Click="showButton_Click"/>

    </Grid>
</Window>
