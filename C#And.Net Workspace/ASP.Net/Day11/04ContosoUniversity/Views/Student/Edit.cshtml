@model _04ContosoUniversity.Models.Student
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h3>Student</h3>
    <hr />
    <input type="hidden" name="StudentId" value=@Model.StudentId />
    <div class="form-group">
        @*<label class="">@Html.DisplayNameFor(m => m.LastName)</label>*@
        @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstMidName, new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.FirstMidName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EnrollmentDate, new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.EnrollmentDate, new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn btn-default">
}
<p style="margin-top:10px;">@Html.ActionLink("Back To List", "Index")</p>