@model MvcShoppingPro.Models.MemberLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>会员登录</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.Email)</label>
        @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "max-width:50%;", data_val_email = "请输入Email地址" })*@
        @Html.EditorFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.Password)</label>
        @*@Html.TextBoxFor(m => m.Password, new { @class = "form-control" })*@
        @Html.EditorFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input type="submit" value="Login" class="btn btn-success">
}
