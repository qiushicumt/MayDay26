@model MvcShoppingPro.Models.Members
@{
    ViewBag.Title = "Member Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Member Register</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.Email)</label>
        @Html.EditorFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.Password)</label>
        @Html.EditorFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.Name)</label>
        @Html.EditorFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        <label class="control-label">@Html.DisplayNameFor(m => m.NickName)</label>
        @Html.EditorFor(m => m.NickName)
        @Html.ValidationMessageFor(m => m.NickName)
    </div>
    <input type="submit" value="注册" class="btn btn-success">
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}