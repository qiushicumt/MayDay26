@model _05Mvc5ContosoUniversity.Models.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Info Edit</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label class="col-sm-2 control-label" style="width:12%;">@Html.DisplayNameFor(m=>m.LastName)</label>
            @Html.TextBoxFor(m=>m.LastName, new { @class = "form-control", style = "width:20%" })
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" style="width:12%;">@Html.DisplayNameFor(m=>m.FirstMidName)</label>
            @*<input type="text" name="FirstMidName" value=@Model.FirstMidName>*@
            @Html.TextBoxFor(m => m.FirstMidName, new { @class = "form-control", style = "width:20%" })
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" style="width:12%;">@Html.DisplayNameFor(m=>m.EnrollmentDate)</label>
            @Html.TextBoxFor(m => m.EnrollmentDate, new { @class = "form-control", style = "width:20%" })
        </div>
        <input type="submit" value="Save" class="btn btn-success">
    }
</div>