@model _03MVC4MovieDemo.Models.Movie

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m=>m.Name)
        @Html.TextBoxFor(m=>m.Name)</div>
    <div class="form-group">
        @Html.LabelFor(m=>m.ReleaseTime)
        @Html.TextBoxFor(m=>m.ReleaseTime)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Genre)
        @Html.TextBoxFor(m=>m.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Price)
        @Html.TextBoxFor(m=>m.Price)
    </div>
    <input type="submit" value="创建" class="btn btn-success">
}
