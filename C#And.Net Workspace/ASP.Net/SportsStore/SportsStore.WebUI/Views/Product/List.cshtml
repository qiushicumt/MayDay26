@model IEnumerable<SportsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "ProductsList";
}

<h2>ProductsList</h2>

@foreach (var itemmodel in Model)
{
    <div class="item">
        <h2>@itemmodel.ProductName</h2>
        <p>@itemmodel.Description</p>
        <h4>@itemmodel.Price.ToString("c")</h4>
    </div>
}